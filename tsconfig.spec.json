{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "outDir": "./build",
    "rootDir": "./",
    "types": [
      "jest",
      "node"
    ],
    "esModuleInterop": true
  },
  "include": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "source/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}